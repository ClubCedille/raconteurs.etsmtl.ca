<div class="popup" id="event_popup" style="display:none;">
    <div class="popup-content os-animation" data-os-animation="fadeIn" data-os-animation-delay="0.4s">
        <span class="close" onclick="document.getElementById('myPopup').style.display='none'">&times;</span>
        <article>
            <a href="{{ p.url }}">
                <div class="img">
                    {% if p.header.image and p.media.images[p.header.image]%}
                        {% set image = p.header.image %}
                    {% elseif p.media.images|length > 0 %}
                        {% set image = p.media.images|first.filename %}
                    {% endif %}
                    {% if image %}
                        {{ p.media.images[image].cropZoom(image_width, image_height).html('', p.title)|raw }}
                        <div class="imgDescription2">
                            <img src="{{ url('theme://images/search.png') }}"/>
                        </div>
                    {% endif %}
                </div>
            </a>
            <div class="content">
                <h3><a href="{{ p.url }}" style="color: #FF8E00;">{{ p.title }}</a></h3>
                {% if p.header.list_summary %}
                <p>{{ p.header.list_summary|raw }}</p>
                {% endif %}
            </div>
            <button onClick="closePopup()"></button>
        </article>
    </div>
</div>

<script>
  function showPopup() {
    document.getElementById('event_popup').style.display = 'block';
  }
  function closePopup() {
    document.getElementById('event_popup').style.display = 'none';
  }
</script>
